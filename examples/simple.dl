#include "rules.dl"

// particle P1
//   foo: writes Foo
//   claim foo is tag1 
// }
// 
// particle P2
//   bar: reads Foo
//   check bar is tag1 
// 
// // recipe:
// P1.foo -> P2. bar
edge("P1.foo", "P2.bar").
claimHasLabel("P1.foo", "tag1").
preservesClaim("P1.foo", "P2.bar", l) :- isLabel(l).
